<?xml version="1.0" encoding="utf-8"?>
<!--PAGE 3-->
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".increased_appetite_questionnaire">

        <!--title-->
        <TextView
            android:id="@+id/titleLbl"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center"
            android:text="Increased Appetite"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:background="#009688" />

        <TextView
            android:id="@+id/subsectionLbl"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:gravity="center_vertical"
            android:paddingLeft="12sp"
            android:text=" During the past seven days..."
            android:textColor="#4B4F51"
            android:textSize="16sp" />

        <!--Increased Appetite Options-->
        <RadioGroup
            android:id="@+id/appetiteBtnGrp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/zeroApptRB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="There is no change in my usual appetite." />

            <RadioButton
                android:id="@+id/oneApptRB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="I feel a need to eat more frequently than usual." />

            <RadioButton
                android:id="@+id/twoApptRB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="I regularly eat more often and/or greater amounts of food than usual" />

            <RadioButton
                android:id="@+id/threeApptRB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="I feel driven to overeat both at mealtime and between meals" />
        </RadioGroup>

        <!--error message-->
        <TextView
            android:id="@+id/msgLbl"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:textStyle="bold"
            android:layout_gravity="center" />

        <!--next button-->
        <Button
            android:id="@+id/nextBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#6F00F8"
            android:text="Next" />

    </LinearLayout>
</ScrollView>