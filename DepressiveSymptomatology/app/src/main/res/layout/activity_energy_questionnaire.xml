<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".energy_questionnaire">

    <TextView
        android:id="@+id/titleLbl"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center"
        android:text="Energy"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/subsectionLbl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="During the past seven days..." />

    <RadioGroup
        android:id="@+id/energyBtnGrp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/zeroEnergyRB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="There is no change in my usual level of energy." />

        <RadioButton
            android:id="@+id/oneEnergyRB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="I get tired more easily than usual." />

        <RadioButton
            android:id="@+id/twoEnergyRB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="I have to make a big effort to start or finish my usual daily activities (for example, shopping, homework, cooking, or going to work)." />

        <RadioButton
            android:id="@+id/threeEnergyRB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="I really cannot carry out most of my usual daily activities because I just don't have the energy." />
    </RadioGroup>

    <TextView
        android:id="@+id/msgLbl"
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <Button
        android:id="@+id/nextBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Next" />

</LinearLayout>