<?xml version="1.0" encoding="utf-8"?>
<!--PAGE 5-->
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".concentration_questionnaire">

        <!--instruction-->
        <TextView
            android:id="@+id/instruction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:text="Please complete the section below" />

        <TextView
            android:id="@+id/duringthepastsevdays"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:text="During the past seven days..." />

        <!--Concentration  / Decision Making-->
        <TextView
            android:id="@+id/concentrationcategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="10. Concentration  / Decision Making:" />

        <RadioGroup
            android:id="@+id/concentrationgroupRB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/zeroconcentrationRB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="There is no change in my usual capacity to concentrate or make decisions." />

            <RadioButton
                android:id="@+id/oneconcentrationRB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I occasionally feel indecisive or find that my attention wanders." />

            <RadioButton
                android:id="@+id/twoconcentrationRB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Most of the time, I struggle to focus my attention or to make decisions." />

            <RadioButton
                android:id="@+id/threeconcentrationRB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I cannot concentrate well enough to read or cannot make even minor decisions." />
        </RadioGroup>

            <!--error message-->
            <TextView
                android:id="@+id/errormsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_gravity="center"/>

            <!--next button-->
            <Button
                android:id="@+id/pgfivenextbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="35dp"
                android:backgroundTint="#9C27B0"
                android:text="Next" />
    </LinearLayout>
</ScrollView>